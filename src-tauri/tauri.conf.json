{
  "productName": "OpenSubtitles Uploader PRO",
  "version": "1.2.0",
  "identifier": "com.opensubtitles.uploader.pro.v2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "OpenSubtitles Uploader PRO",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "center": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "security": {
    "capabilities": [
      {
        "identifier": "main-capability",
        "description": "Main app permissions",
        "windows": ["main"],
        "permissions": [
          "shell:allow-open",
          "fs:default",
          "dialog:default",
          "http:default"
        ]
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "OpenSubtitles",
    "copyright": "Copyright Â© 2025 OpenSubtitles",
    "category": "Productivity",
    "shortDescription": "OpenSubtitles Uploader PRO - Professional subtitle uploader",
    "longDescription": "OpenSubtitles Uploader PRO is a professional React-based subtitle uploader application that integrates with both OpenSubtitles APIs for seamless subtitle management and upload. Features include drag-and-drop support, automatic video/subtitle pairing, language detection, movie hash calculation, and comprehensive metadata enrichment.",
    "macOS": {
      "entitlements": "entitlements.plist",
      "frameworks": [],
      "signingIdentity": "-"
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "shell:allow-open",
          "urls": ["https://*", "http://*"]
        }
      ]
    },
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": false
    }
  }
}